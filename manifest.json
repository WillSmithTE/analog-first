{
  "name": "Breathe In",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Improve your downtime with a portable breathing widget on every website",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [],
  "optional_host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
